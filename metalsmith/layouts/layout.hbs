<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>{{#if pagetitle}}{{pagetitle}} &mdash; {{/if}}{{title}}</title>
    {{#if description}}
        <meta name="description" content="{{description}}">
    {{/if}}
    {{#unless isProduction}}
        <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
        <meta http-equiv="Pragma" content="no-cache">
        <meta http-equiv="Expires" content="0">
    {{/unless}}
    {{#if isProduction}}
        <link rel="stylesheet" href="/assets/css/simpleton.min.css?v={{version}}">
        <link rel="stylesheet" href="/assets/css/docs.min.css?v={{version}}">
    {{else}}
        <script>
            document.write(`<link rel="stylesheet" href="/assets/css/simpleton.css?v=${Date.now()}">`);
            document.write(`<link rel="stylesheet" href="/assets/css/docs.css?v=${Date.now()}">`);
        </script>
    {{/if}}
</head>
<body>
<div id="container">
    <header class="site-header">
        <nav>
            <h1 class="site-name"><a href="/">{{title}}</a></h1>
            <ul class="site-menu">
                <li><a href="/markup">Markup</a></li>
                <li><a href="/typography">Typography</a></li>
                <li><a href="/colors">Colors</a></li>
                <li><a href="/forms">Forms</a></li>
                <li><a href="/grids">Grids</a></li>
                <li><a href="/functions">Functions</a></li>
                <li><a href="/mixins">Mixins</a></li>
                <li><a href="/variables">Variables</a></li>
            </ul>
        </nav>
    </header>
    <main>
        {{{contents}}}
    </main>
    <footer class="site-footer">
        <div class="copyright">
            Built by <a href="https://johnromeral.com">John Romeral</a>. Released under the
            <a href="/license.txt">MIT License</a>. Absolutely no warranties.
        </div>
    </footer>
</div>
<script src='/assets/vendor/prism.min.js?v={{version}}'></script>
{{#if isProduction}}
    <script src='/assets/js/simpleton.min.js?v={{version}}'></script>
    <script src='/assets/js/docs.min.js?v={{version}}'></script>
{{else}}
    <script src="http://localhost:35729/livereload.js"></script>

    <script>
        document.write(`<script src='/assets/js/simpleton.js?v=${Date.now()}'><\/script>`);
        document.write(`<script src='/assets/js/docs.js?v=${Date.now()}'><\/script>`);
    </script>
{{/if}}
</body>
</html>
