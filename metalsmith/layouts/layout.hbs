<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>{{#if pagetitle}}{{pagetitle}} &hyphen; {{/if}}{{ title }}</title>
    {{#if description}}
        <meta name="description" content="{{description}}">
    {{/if}}
    {{#unless isProduction}}
        <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
        <meta http-equiv="Pragma" content="no-cache">
        <meta http-equiv="Expires" content="0">
    {{/unless}}
    <link href="//fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    {{#if isProduction}}
        <link rel="stylesheet" href="/assets/css/simpleton.min.css?v={{version}}">
        <link rel="stylesheet" href="/assets/css/docs.min.css?v={{version}}">
    {{else}}
        <link rel="stylesheet" href="/assets/css/simpleton.css?v={{version}}">
        <link rel="stylesheet" href="/assets/css/docs.css?v={{version}}">
    {{/if}}
</head>
<body>
<div class="container">
    <header class="site-header">
        <nav>
            <h1 class="site-name"><a href="/">{{title}}</a></h1>
            <ul class="site-menu row tight">
                <li><a href="/markup">Markup</a></li>
                <li><a href="/colors">Colors</a></li>
                <li><a href="/buttons">Buttons</a></li>
                <li><a href="/grids">Grids</a></li>
                <li><a href="/sass">Sass</a></li>
            </ul>
        </nav>
    </header>
    <main class="mgb-400">
        {{{contents}}}
    </main>
    <footer class="site-footer row">
        <div class="copyright">Built by <a href="https://johnromeral.com">John Romeral</a>. Released under the
            <a href="https://opensource.org/licenses/MIT">MIT License</a>. Absolutely no warranties.
        </div>
    </footer>
</div>
<script src='/assets/vendor/prism.min.js?v={{version}}'></script>
{{#if isProduction}}
    <script src='/assets/js/simpleton.min.js?v={{version}}'></script>
    <script src='/assets/js/docs.min.js?v={{version}}'></script>
{{else}}
    <script src="http://localhost:35729/livereload.js"></script>
    <script src='/assets/js/simpleton.js?v={{version}}'></script>
    <script src='/assets/js/docs.js?v={{version}}'></script>
{{/if}}
</body>
</html>
