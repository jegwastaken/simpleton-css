---
pagetitle: Functions
layout: layout.hbs
---

<h1>{{pagetitle}}</h1>

{{#each sassdocData.functions}}
    <section id="{{context.name}}" class="doc-block">
        <h2>{{context.name}} {{#crosslink context.type context.type context.name}}#{{/crosslink}}</h2>
        {{#if description}}
            <div class="description">{{{description}}}</div>
        {{/if}}
        {{#ifnoteq group.[0] "undefined"}}
            <h3>Group</h3>
            <p>{{group.[0]}}</p>
        {{/ifnoteq}}
        {{#if parameter}}
            <h3>Params</h3>
            <table>
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Default</th>
                </tr>
                </thead>
                <tbody>
                {{#each parameter}}
                    <tr>
                        <td><code>{{name}}</code></td>
                        <td><code>{{type}}</code></td>
                        <td><code>{{#if default}}{{default}}{{else}}--{{/if}}</code></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{/if}}
        {{#if require}}
            <h3>Requires</h3>
            <table>
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                </tr>
                </thead>
                <tbody>
                {{#each require}}
                    <tr>
                        <td><code>{{#crosslink type ../context.type name}}{{name}}{{/crosslink}}</code></td>
                        <td><code>{{type}}</code></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        {{/if}}
        {{#if context.code}}
            <h3>Code</h3>
            <p>{{#sourcelink file.path context.line.start context.line.end}}Source{{/sourcelink}}</p>
            <pre><code class="lang-scss">{{context.code}}</code></pre>
        {{/if}}
        {{#if context.value}}
            <h3>Value</h3>
            <p>{{#sourcelink file.path context.line.start context.line.end}}Source{{/sourcelink}}</p>
            <pre><code class="lang-scss">{{context.value}}</code></pre>
        {{/if}}
    </section>
{{/each}}

