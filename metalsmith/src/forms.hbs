<h1>{{pagetitle}}</h1>

<section class="card mgb-300">
    <h2>Buttons</h2>
    <div class="output mgb-175">
        <div class="mgbch-25">
            <button class="button">default</button>
            <button class="button" disabled>disabled</button>
            {{#each sassVars.colors}}
                <button class="button {{@key}}">{{@key}}</button>
            {{/each}}
        </div>
    </div>
    <div class="markup">
        <!--@formatter:off-->
        <pre><code class="lang-html">```<div class="mgbch-25">
    <button class="button">default</button>
    <button class="button" disabled>disabled</button>
    {{#each sassVars.colors}}
